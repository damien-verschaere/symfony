{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
 
<form method="post" class="d-flex flex-column align-items-center m-2" style="min-height:500px">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class=" text-center">Please sign in</h1>
    <label class="m-2" for="inputUsername">Username</label>
    <input class="m-2" style="width:25%" type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
    <label class="m-2" for="inputPassword">Password</label>
    <input class="m-2" style="width:25%" type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary " type="submit">
        Sign in
    </button>
</form>
{% endblock %}
